{
  "title": "Bowtie Benchmarks",
  "description": "A collection of benchmarks used to compare the performance between various JSON Schema Implementations.",
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "$id": "tag:bowtie.report,2024:benchmarks",

  "type": "object",
  "required": ["title", "description", "schema", "cases"],
  "properties": {
    "title": { "type": "string" },
    "description": { "type": "string" },
    "schema": { "type": "object" },
    "cases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description", "case"],
        "properties": {
          "description": { "type": "string" },
          "case": { "type": "object" }
        }
      }
    }
  }
}
